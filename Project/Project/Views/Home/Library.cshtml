@model IEnumerable<Project.Models.GameCard>
@{
<div class="jumbotron">
       
<h1>Welcome, @User.Identity.Name</h1>
<a class="btn btn-lg btn-danger" href="/signout?returnUrl=%2F">Sign out</a>

<p>
<div class="row">
    @foreach(var item in Model) 
    {
        <div class="card m-1" style=" width:350px">
           <div class="card-body">
               <h5>@Html.DisplayFor(ModelItem=>item.Name)</h5>
               <img  src="@Html.DisplayFor(ModelItem=>item.ImageUrl)" alt="alternate text"/>
           </div>

        </div>
    }
</div>
</p>                                  
</div>
}

